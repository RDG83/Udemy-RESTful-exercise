<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id%>?_method=put" method="post">
    <div class="field">
      <label for="">Title</label>
      <input type="text" name="blog[title]" id="" value="<%=blog.title%>" />
    </div>
    <div class="field">
      <label for="">Image</label>
      <input type="text" name="blog[image]" id="" value="<%=blog.image%>" />
    </div>
    <div class="field">
      <label for="">Blog content</label>
      <textarea required name="blog[body]" id="" cols="30" rows="10"><%=blog.body%></textarea>
    </div>
    <input class="ui button" type="submit" value="submit" />
  </form>
</div>

<% include ./partials/footer %>
